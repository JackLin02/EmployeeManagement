<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.dao.RoleDao">

<select id="getRoleById" resultMap="RoleMap">
	SELECT * FROM role WHERE id=#{id}
</select>

<select id="getAllRole" resultMap="RoleMap">
	SELECT * FROM role
</select>

<delete id="deleteRole" parameterType="Role">
	DELETE FORM role WHERE id=#{id}
</delete>

<insert id="insertRole" parameterType="Role">
	INSERT INTO Role VALUES (null,#{roleId},#{roleName})
</insert>

<update id="updateRole" parameterType="Role">
	UPDATE Role SET role_id = #{roleId}, role_name = #{roleName}
	WHERE id=#{id}
</update>

<resultMap id="RoleMap" type="Role">
	<id property="id" column="id"></id>
	<result property="roleId" column="role_id"></result>
	<result property="roleName" column="role_name"></result>
	<result property="userRole.uid" column="uid"></result>
	<result property="userRole.rid" column="rid"></result>
</resultMap>
</mapper>